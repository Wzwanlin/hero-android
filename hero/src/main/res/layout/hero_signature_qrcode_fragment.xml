<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/qrcode_fragment_title_rl"
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:text="收款码"
            android:textColor="@color/c4"
            android:textSize="20sp" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/sign_line"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_below="@+id/qrcode_fragment_title_rl"
        android:id="@+id/qrcode_fragment_content_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/qrcode_icon_iv"
            android:background="@drawable/wallet_icon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/qrcode_hash_tv"
                android:layout_width="280dp"
                android:layout_centerInParent="true"
                android:lines="2"
                android:layout_height="wrap_content"
                android:textColor="@color/c4"
                android:textSize="15sp"
                android:lineSpacingMultiplier="1.1"
                android:text="0x29378D283A039C0a23c12A839a20390F293A3b90"/>

        </RelativeLayout>

        <ImageView
            android:id="@+id/qrcode_iv"
            android:layout_width="280dp"
            android:layout_height="280dp"
            android:layout_marginTop="40dp"
            android:layout_gravity="center"/>
    </LinearLayout>

    <Button
        android:id="@+id/qrcode_copy_bt"
        android:layout_width="match_parent"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_height="44dp"
        android:background="@drawable/sign_confirm_button"
        android:text="复制收款地址"
        android:textColor="@color/heroWhite"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"
        android:textSize="18sp" />

</RelativeLayout>