<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/export_qrcode_tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="仅供直接扫描"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="40dp"
        android:textSize="14sp"
        android:textColor="@color/tab_blue"
        />

    <TextView
        android:id="@+id/export_qrcode_tv2"
        android:layout_below="@+id/export_qrcode_tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="二维码禁止保存、截图、以及拍照。仅供用户在安全环境下直接扫描来方便的导入钱包。"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="8dp"
        android:textSize="13sp"
        android:textColor="@color/c2"
        />

    <TextView
        android:id="@+id/export_qrcode_tv3"
        android:layout_below="@+id/export_qrcode_tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="在安全环境下使用"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="20dp"
        android:textSize="14sp"
        android:textColor="@color/tab_blue"
        />

    <TextView
        android:id="@+id/export_qrcode_tv4"
        android:layout_below="@+id/export_qrcode_tv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请在确保四周无人及无摄像头的情况下使用。二维码一旦泄漏被他人获取将造成不可挽回的资产损失。"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="8dp"
        android:textSize="13sp"
        android:textColor="@color/c2"
        />

    <ImageView
        android:id="@+id/export_qrcode_iv"
        android:layout_below="@+id/export_qrcode_tv4"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="40dp"
        android:layout_centerInParent="true"
        android:layout_marginRight="40dp"
        />



</RelativeLayout>