<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:background="@color/heroWhite">

    <TextView
        android:id="@+id/confirm_dialog_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="显示内容"
        android:layout_centerHorizontal="true"
        android:textColor="@color/c3"
        android:layout_marginTop="24dp"
        android:textSize="22sp"/>

    <EditText
        android:layout_below="@+id/confirm_dialog_content"
        android:id="@+id/confirm_dialog_password_et"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:background="@drawable/sign_password_background"
        android:hint="输入密码"
        android:inputType="textPassword"
        android:maxLines="1"
        android:padding="8dp"
        android:textSize="13sp" />

    <ImageView
        android:id="@+id/confirm_dialog_line"
        android:layout_below="@+id/confirm_dialog_password_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="@drawable/sign_line"/>

    <TextView
        android:id="@+id/confirm_dialog_ok"
        android:layout_marginTop="18dp"
        android:layout_below="@+id/confirm_dialog_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="OK"
        android:textSize="22sp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginBottom="20dp"
        android:textColor="@color/tab_blue"/>

    <LinearLayout
        android:id="@+id/confirm_dialog_ll"
        android:layout_below="@+id/confirm_dialog_line"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/confirm_dialog_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="确认"
            android:textColor="@color/tab_blue"
            android:textSize="22sp" />

        <ImageView
            android:id="@+id/confirm_dialog_verticalline"
            android:layout_below="@+id/confirm_dialog_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:background="@drawable/vertical_line"/>

        <TextView
            android:id="@+id/confirm_dialog_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="取消"
            android:textSize="22sp"
            android:textColor="@color/tab_blue"/>


    </LinearLayout>



</RelativeLayout>